<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="1dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_launcher_background"/>
        <RelativeLayout
            android:id="@+id/info"
            android:layout_toRightOf="@id/image"
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/kat_aduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAT ADUAN"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:layout_below="@id/kat_aduan"
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="&#xf073; Tanggal"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:layout_toRightOf="@id/tanggal"
                android:layout_below="@id/kat_aduan"
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="&#xf02e; Status"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/desk"
                android:layout_below="@id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Deskripsi"
                android:layout_marginRight="10dp"
                android:maxLines="4"
                android:lines="4"
                android:textSize="13dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/cog"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="&#xf013;"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/solid"
                android:layout_marginBottom="3dp"
                app:backgroundTint="@null"
                android:background="@drawable/tombol_edit"
                />
            <Button
                android:id="@+id/hapus"
                android:layout_below="@id/cog"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="&#xf2ed;"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/solid"
                app:backgroundTint="@null"
                android:background="@drawable/tombol_del"
                />
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>