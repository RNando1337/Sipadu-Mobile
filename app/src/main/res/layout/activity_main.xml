<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/Selamat"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/Selamat"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Selamat Datang,"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_below="@id/Selamat"
        android:layout_alignLeft="@id/Selamat"
        android:id="@+id/UserName"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans"
        android:text="UserName"
        android:textSize="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/front_menu"
        android:orientation="vertical"
        android:padding="40dp">

        <RelativeLayout
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/menu_item"
            android:layout_marginBottom="30dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Lakukan Pengaduan"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    android:textStyle="normal|bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:fontFamily="@font/nunito_sans"
                    />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/menu_item"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Status Aduan"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/nunito_sans"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/menu_item"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Profile"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/nunito_sans"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/menu_item"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Keluar"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/nunito_sans"
                />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>